<Window x:Class="FlawHUD.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x2="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:FlawHUD.Installer"
        mc:Ignorable="d"
        Title="FlawHUD Installer"
        Height="300" Width="800"
        SizeToContent="Manual"
        ResizeMode="NoResize">

    <Grid Background="{StaticResource Background-Dark}">
        <Label
            Name="lblStatus"
            Style="{StaticResource Header}"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="FlawHUD Installer" />

        <Label
            Name="lblNews"
            Style="{StaticResource Header}"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="..." />

        <GroupBox
            x:Name="gbColors"
            Width="385"
            Height="120"
            Margin="10,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Header="Colors">

            <Grid>
                <x2:ColorPicker
                    x:Name="cpAmmoClip"
                    Width="110"
                    Margin="10,22,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    Foreground="Black"
                    ShowDropDownButton="False" />

                <Label
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Ammo In Clip:"
                    ToolTip="Color of the ammo clip"
                    Foreground="White" />

                <x2:ColorPicker
                    x:Name="cpAmmoClipLow"
                    Width="110"
                    Margin="10,67,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    Foreground="Black"
                    ShowDropDownButton="False" />

                <Label
                    Margin="10,45,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Low Clip:"
                    ToolTip="Color of the ammo clip when low"
                    Foreground="White" />

                <x2:ColorPicker
                    x:Name="cpHealthNormal"
                    Width="110"
                    Margin="133,22,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    Foreground="Black"
                    ShowDropDownButton="False" />

                <Label
                    Margin="133,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Health Normal:"
                    ToolTip="Color of the player health"
                    Foreground="White" />

                <x2:ColorPicker
                    x:Name="cpHealthLow"
                    Width="110"
                    Margin="133,62,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    Foreground="Black"
                    ShowDropDownButton="False" />

                <Label
                    Margin="138,39,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Health Low:"
                    ToolTip="Color of the player health when low"
                    Foreground="White" />

                <x2:ColorPicker
                    x:Name="cpUberBarColor"
                    Margin="256,18,2,0"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    ShowDropDownButton="False"
                    Foreground="Black"
                    VerticalAlignment="Top" />

                <Label
                    Margin="256,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Charging Color:"
                    ToolTip="Color of the ubercharge when full"
                    Foreground="White" Width="112" />

                <x2:ColorPicker
                    x:Name="cpUberFullColor"
                    Margin="250,62,-4,0"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    ShowDropDownButton="False"
                    Foreground="Black"
                    VerticalAlignment="Top" />

                <Label
                    Margin="243,40,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Full Charge Color:"
                    Foreground="White" Width="112" />
            </Grid>
        </GroupBox>

        <GroupBox
            x:Name="gbCrosshair"
            Width="385"
            Height="120"
            Margin="405,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Header="Crosshair">

            <Grid>
                <x2:ColorPicker
                    x:Name="cpXHairColor"
                    Width="110"
                    Margin="10,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    ShowDropDownButton="False"
                    Foreground="Black" />

                <Label
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Base Color:"
                    ToolTip="Color of the crosshair"
                    Foreground="White"
                    RenderTransformOrigin="0.467,0.804" />

                <ComboBox
                    Name="cbXHairSize"
                    Width="110"
                    Margin="10,64,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">

                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="10"
                        IsSelected="True" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="12" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="14" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="16" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="18" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="20" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="22" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="24" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="26" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="28" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="30" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="32" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="34" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="36" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="38" />
                    <ComboBoxItem
                        Width="118.4"
                        HorizontalAlignment="Left"
                        Content="40" />
                </ComboBox>

                <Label
                    Margin="10,42,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Crosshair Size:"
                    ToolTip="Size of the crosshair"
                    Foreground="White" />

                <x2:ColorPicker
                    x:Name="cpXHairPulse"
                    Width="110"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ColorMode="ColorCanvas"
                    ShowRecentColors="True"
                    Foreground="Black"
                    ShowDropDownButton="False" />

                <Label
                    Margin="133,-1,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Pulse Color:"
                    ToolTip="Color of the crosshair when hitting another player"
                    Foreground="White" />

                <x2:IntegerUpDown
                    x:Name="tbXHairXPos"
                    FormatString="N0"
                    Value="0"
                    Increment="1"
                    Minimum="-9999"
                    Maximum="9999"
                    HorizontalAlignment="Left"
                    Height="23"
                    Margin="133,65,0,0"
                    VerticalAlignment="Top"
                    Width="50" />

                <x2:IntegerUpDown
                    x:Name="tbXHairYPos"
                    FormatString="N0"
                    Value="0"
                    Increment="1"
                    Minimum="-9999"
                    Maximum="9999"
                    HorizontalAlignment="Left"
                    Height="23"
                    Margin="193,65,0,0"
                    VerticalAlignment="Top"
                    Width="50" />

                <Label
                    Margin="133,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="X:"
                    ToolTip="Horizontal position of the crosshair"
                    Foreground="White" />

                <Label
                    Margin="193,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Y:"
                    ToolTip="Vertical position of the crosshair"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkXHairEnable"
                    Margin="248,19,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Enable Crosshair"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkXHairPulse"
                    Margin="248,37,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Pulse Hitmarker"
                    Foreground="White"
                    RenderTransformOrigin="-0.061,1.395" />
            </Grid>
        </GroupBox>

        <GroupBox
            x:Name="gbOptions"
            Width="385"
            Height="116"
            Margin="10,158,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Foreground="White"
            Header="Options">

            <Grid>
                <CheckBox
                    x:Name="chkDisguiseImage"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Spy Disguise Image"
                    ToolTip="Toggle the Spy silhouette image seen when disguising"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkDefaultBG"
                    Margin="10,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Default Backgrounds"
                    ToolTip="Toggle the stock main menu backgrounds"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkMenuImages"
                    Margin="10,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Main Menu Class Images"
                    ToolTip="Toggle the class images seen on the main menu"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkTransparentVM"
                    Margin="176,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Transparent Viewmodels"
                    ToolTip="Toggle the transparency on the weapon viewmodels"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkCodeProFonts"
                    Margin="176,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Code Pro Fonts"
                    ToolTip="Toggle the transparency on the weapon viewmodels"
                    Foreground="White" />

                <CheckBox
                    x:Name="chkStreamerMode"
                    Margin="175,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Streamer Mode"
                    ToolTip="Toggle the transparency on the weapon viewmodels"
                    Foreground="White" />
            </Grid>
        </GroupBox>

        <Button
            x:Name="Install"
            Width="110"
            Height="30"
            Margin="405,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Install_Click"
            Content="Install"
            Style="{StaticResource Button}" />

        <Button
            x:Name="Uninstall"
            Width="110"
            Height="30"
            Margin="520,201,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Uninstall_Click"
            Content="Uninstall"
            Style="{StaticResource Button}" />

        <Button
            x:Name="Save"
            Width="110"
            Height="30"
            Margin="635,201,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Save_Click"
            Content="Apply Changes"
            Style="{StaticResource Button}" />

        <Button
            x:Name="Reset"
            Width="110"
            Height="30"
            Margin="405,201,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Reset_Click"
            Content="Reset to Default"
            Style="{StaticResource Button}" />

        <Button
            x:Name="ChangeDirectory"
            Width="110"
            Height="30"
            Margin="520,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ChangeDirectory_Click"
            Content="Change Directory"
            Style="{StaticResource Button}" />

        <Button
            x:Name="ReportIssue"
            Width="110"
            Height="30"
            Margin="635,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ReportIssue_Click"
            Content="Report an Issue"
            Style="{StaticResource Button}" />

        <Button
            x:Name="Start"
            Width="110"
            Height="30"
            Margin="405,236,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Start_Click"
            Content="Start Team Fortress 2"
            FontSize="10"
            Style="{StaticResource Button}" />
    </Grid>
</Window>