<Window x:Class="FlawHUD.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x2="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="FlawHUD Installer"
        Height="650" Width="900"
        SizeToContent="Manual"
        FontFamily="./Resources/style/tf2secondary.ttf #TF2 Secondary"
        FontSize="20px"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <x2:BusyIndicator x:Name="BusyIndicator" IsBusy="False">
        <Grid Background="#2B2724">
            <Label
                Name="LblStatus"
                Margin="10,10,0,0"
                Content="FlawHUD Installer" />

            <Label
                Name="LblNews"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                Content="..." />

            <GroupBox
                Width="430"
                Height="350"
                Margin="10,40,0,0"
                Header="Colors">
                <Grid>
                    <Label
                        Margin="10,5,0,0"
                        Content="Health Style:"
                        ToolTip="Select the style of the health display." />

                    <ComboBox
                        x:Name="CbHealthStyle"
                        Width="200"
                        Margin="200,5,0,0"
                        SelectedValuePath="Content">
                        <ComboBoxItem>Default</ComboBoxItem>
                        <ComboBoxItem>Colored Text</ComboBoxItem>
                        <ComboBoxItem>Cross</ComboBoxItem>
                    </ComboBox>

                    <x2:ColorPicker
                        x:Name="CpHealthBuffed"
                        Width="200"
                        Margin="200,45,0,0" />

                    <Label
                        Margin="10,45,0,0"
                        Content="Buffed Health:"
                        ToolTip="Color of the player's health when buffed." />

                    <x2:ColorPicker
                        x:Name="CpHealthLow"
                        Width="200"
                        Margin="200,85,0,0" />

                    <Label
                        Margin="10,85,0,0"
                        Content="Low Health:"
                        ToolTip="Color of the player's health when low." />

                    <x2:ColorPicker
                        x:Name="CpAmmoLow"
                        Width="200"
                        Margin="200,125,0,0" />

                    <Label
                        Margin="10,125,0,0"
                        Content="Low Ammo:"
                        ToolTip="Color of the player's ammo when low." />

                    <x2:ColorPicker
                        x:Name="CpUberBarColor"
                        Width="200"
                        Margin="200,165,0,0" />

                    <Label
                        Margin="10,165,0,0"
                        Content="Uber Charging:"
                        ToolTip="Color of the ÜberCharge meter while charging." />

                    <x2:ColorPicker
                        x:Name="CpUberFullColor"
                        Width="200"
                        Margin="200,205,0,0" />

                    <Label
                        Margin="10,205,0,0"
                        Content="Uber Charged:"
                        ToolTip="Color of the ÜberCharge meter when charged." />

                    <x2:ColorPicker
                        x:Name="CpTargetHealth"
                        Width="200"
                        Margin="200,245,0,0" />

                    <Label
                        Margin="10,245,0,0"
                        Content="Target Health:"
                        ToolTip="Color of the health amount healed. Requires a game restart." />

                    <x2:ColorPicker
                        x:Name="CpTargetDamage"
                        Width="200"
                        Margin="200,285,0,0" />

                    <Label
                        Margin="10,285,0,0"
                        Content="Target Damage:"
                        ToolTip="Color of the damage dealt to another player. Requires a game restart." />
                </Grid>
            </GroupBox>

            <GroupBox
                Width="430"
                Height="348"
                Margin="454,42,0,0"
                Header="Crosshair">

                <Grid>
                    <x2:ColorPicker
                        x:Name="CpXHairColor"
                        Width="100"
                        Margin="200,60,0,0"
                        IsEnabled="False" />

                    <Label
                        Margin="10,60,0,0"
                        Content="Colors:"
                        ToolTip="Color of the crosshair." />

                    <Label
                        Margin="10,84,0,0"
                        Content="*First color is the crosshair default and second is the hitmarker"
                        FontSize="10px" />

                    <x2:IntegerUpDown
                        x:Name="IntXHairSize"
                        Margin="200,110,0,0"
                        Value="18"
                        Minimum="10"
                        Maximum="30" Height="28" Width="200"
                        IsEnabled="False" />

                    <Label
                        Margin="10,110,0,0"
                        Content="Crosshair Size:"
                        ToolTip="Size of the crosshair." />

                    <x2:ColorPicker
                        x:Name="CpXHairPulse"
                        Width="100"
                        Margin="301,60,0,0"
                        IsEnabled="False" />

                    <Label
                        Margin="10,160,0,0"
                        Content="Crosshair Style:"
                        ToolTip="Size of the crosshair." />

                    <ComboBox
                        Name="CbXHairStyle"
                        Width="200"
                        Margin="200,152,0,0"
                        SelectedValuePath="Content"
                        Style="{StaticResource CrosshairBox}"
                        IsEnabled="False">

                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="!" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="#" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="$" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="%" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="'" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="(" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content=")" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="*" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="+" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="," />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="-" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="." />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="/" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="1" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="2" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="3" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="4" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="5" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="6" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="7" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="8" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="9" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content=":" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content=";" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="&lt;" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="=" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content=">" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="?" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="@" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="A" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="B" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="C" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="D" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="E" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="F" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="G" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="H" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="I" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="J" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="K" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="L" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="M" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="N" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="O" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="P" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="Q" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="R" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="S" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="T" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="U" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="V" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="W" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="X" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="Y" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="Z" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="[" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="\" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="]" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="^" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="_" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="`" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="a" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="b" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="c" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="d" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="e" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="f" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="g" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="h" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="i" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="j" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="k" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="l" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="m" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="n" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="o" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="p" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="q" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="r" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="s" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="t" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="u" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="v" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="w" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="x" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="y" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="z" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="|" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="}" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="x" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="y" />
                        <ComboBoxItem Style="{StaticResource Crosshair}"
                                      Content="z" />
                    </ComboBox>

                    <Label
                        Margin="10,210,0,0"
                        Content="Crosshair Effect:"
                        ToolTip="Effect applied to the crosshair (None, Blur or Outline)." />

                    <ComboBox
                        x:Name="CbXHairEffect"
                        Width="200"
                        Margin="200,210,0,0"
                        SelectedValuePath="Content">
                        <ComboBoxItem>None</ComboBoxItem>
                        <ComboBoxItem>Blur</ComboBoxItem>
                        <ComboBoxItem>Outline</ComboBoxItem>
                    </ComboBox>

                    <x2:IntegerUpDown
                        x:Name="IntXHairXPos"
                        Value="25"
                        Minimum="-9999"
                        Maximum="9999"
                        Margin="81,262,0,0"
                        TextAlignment="Left"
                        Width="120"
                        IsEnabled="False" />

                    <x2:IntegerUpDown
                        x:Name="IntXHairYPos"
                        Value="24"
                        Minimum="-9999"
                        Maximum="9999"
                        Margin="280,262,0,0"
                        TextAlignment="Left"
                        Width="120"
                        IsEnabled="False" />

                    <Label
                        Margin="10,260,0,0"
                        Content="X-Axis:"
                        ToolTip="Horizontal position of the crosshair." />

                    <Label
                        Margin="206,260,0,0"
                        Content="Y-Axis:"
                        ToolTip="Vertical position of the crosshair." />

                    <CheckBox
                        x:Name="CbXHairEnable"
                        Margin="10,20,0,0"
                        Content="Enable Crosshair"
                        FontSize="14px"
                        Click="CbXHairEnable_OnClick" />

                    <CheckBox
                        x:Name="CbXHairHitmarker"
                        Margin="285,20,0,0"
                        Content="Pulse Hitmarker"
                        FontSize="14px"
                        IsEnabled="False" />

                    <CheckBox
                        x:Name="CbXHairRotate"
                        Margin="150,20,0,0"
                        Content="Rotate Crosshair"
                        FontSize="14px"
                        Click="CbXHairEnable_OnClick"
                        IsEnabled="False" />
                </Grid>
            </GroupBox>

            <GroupBox
                Width="430"
                Height="200"
                Margin="10,395,0,0"
                Header="Options">

                <Grid>
                    <CheckBox
                        x:Name="CbDisguiseImage"
                        Margin="10,40,0,0"
                        Content="Spy Disguise Image"
                        ToolTip="Display the silhouette of the Spy while disguising." />

                    <CheckBox
                        x:Name="CbDefaultBg"
                        Margin="10,100,0,0"
                        Content="Default Backgrounds"
                        ToolTip="Display the default TF2 backgrounds on the main menu."
                        Grid.ColumnSpan="2" />

                    <CheckBox
                        x:Name="CbMenuImages"
                        Margin="10,70,0,0"
                        Content="Main Menu Class Images"
                        ToolTip="Display class images on the main menu."
                        Grid.ColumnSpan="2" />

                    <CheckBox
                        x:Name="CbTransparentViewmodel"
                        Margin="10,130,0,0"
                        Content="Transparent Viewmodels"
                        ToolTip="Enable transparency on the weapon viewmodels." />

                    <CheckBox
                        x:Name="CbCodeProFonts"
                        Margin="10,10,0,0"
                        Content="Code Pro Fonts"
                        ToolTip="Change the HUD fonts to Code Pro." />

                    <CheckBox
                        x:Name="CbLowerPlayerStats"
                        Margin="220,10,0,0"
                        Content="Lowered Player Stats"
                        ToolTip="If enabled, lowers the player health and ammo indicators."
                        Click="CbLowerPlayerStats_OnClick" />

                    <CheckBox
                        x:Name="CbAlternatePlayerStats"
                        Margin="220,40,0,0"
                        Content="Alternate Player Stats"
                        ToolTip="If enabled, will use alternate positions for player health and ammo. Note: Cannot be used at the same time as the 'Lowered Player Stats' option"
                        Click="CbAlternatePlayerStats_OnClick" />

                    <Label
                        Margin="220,64,0,0"
                        Content="Killfeed Rows:"
                        FontSize="16px"
                        ToolTip="Color of the ÜberCharge meter when charged." />

                    <x2:IntegerUpDown
                        x:Name="IntKillFeedRows"
                        Value="6"
                        Minimum="0"
                        Maximum="9"
                        Margin="328,65,0,0"
                        TextAlignment="Left"
                        FontSize="16px"
                        Width="50" />
                </Grid>
            </GroupBox>

            <GroupBox
                Width="430"
                Height="200"
                Margin="454,395,0,0"
                Header="Buttons">

                <Grid>
                    <Button
                        x:Name="BtnInstall"
                        Width="190"
                        Height="40"
                        Click="BtnInstall_OnClick"
                        Content="Install"
                        Style="{StaticResource Button}" Margin="10,10,0,0" />

                    <Button
                        x:Name="BtnUninstall"
                        Width="190"
                        Height="40"
                        Click="BtnUninstall_OnClick"
                        Content="Uninstall"
                        Style="{StaticResource Button}" Margin="218,10,0,0" />

                    <Button
                        x:Name="BtnSave"
                        Width="190"
                        Height="40"
                        Click="BtnSave_OnClick"
                        Content="Apply Changes"
                        Style="{StaticResource Button}" Margin="10,60,0,0" />

                    <Button
                        x:Name="BtnReset"
                        Width="190"
                        Height="40"
                        Click="BtnReset_OnClick"
                        Content="Reset to Default"
                        Style="{StaticResource Button}" Margin="218,60,0,0" />

                    <Button
                        x:Name="BtnDirectory"
                        Width="130"
                        Height="40"
                        Click="BtnDirectory_OnClick"
                        Content="Set Directory"
                        Style="{StaticResource Button}" Margin="278,110,0,0" />

                    <Button
                        x:Name="BtnReportIssue"
                        Width="128"
                        Height="40"
                        HorizontalAlignment="Center"
                        Click="BtnReportIssue_OnClick"
                        Content="Report Issue"
                        Style="{StaticResource Button}" Margin="0,110,0,0" />

                    <Button
                        x:Name="BtnStart"
                        Width="130"
                        Height="40"
                        Click="BtnStart_OnClick"
                        Content="Start TF2"
                        Style="{StaticResource Button}" Margin="10,110,0,0" />
                </Grid>
            </GroupBox>
        </Grid>
    </x2:BusyIndicator>
</Window>